<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainImagem"
            android:onClick="abrirNoticia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/mcafee_do_mit"/>

        <TextView
            android:id="@+id/mainTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Titulo"
            android:textSize="20dp"
            android:layout_below="@id/mainImagem" />

        <TextView
            android:id="@+id/mainAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thiago Lavado"
            android:textColor="@android:color/black"
            android:layout_below="@+id/mainTitulo" />

        <TextView
            android:id="@+id/mainData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainTitulo"
            android:layout_toRightOf="@+id/mainAutor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="16/03/2018" />

        <TextView
            android:id="@+id/mainTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noticia_mcafee"
            android:layout_marginTop="8dp"
            android:layout_below="@id/mainAutor"/>
    </RelativeLayout>
</ScrollView>